<?xml version = "1.0" encoding = "utf-8"?>
<odoo>
    <data>
        <!--Modelo, Vista de Formulario -->
        <record id="hospital_doctor_view_form" model="ir.ui.view">
            <field name="name">hospital.doctor.form</field>
            <field name="model">hospital.doctor</field>
            <field name="arch" type="xml">
                <form string="Medico">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="speciality"/>
                                <field name="phone"/>
                            </group>
                            <group>
                                <field name="email"/>
                                <field name="active"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

         <!--Modelo, de Vista tree-->
        <record id="hospital_doctor_view_tree" model="ir.ui.view">
            <field name="name">hospital.doctor.tree</field>
            <field name="model">hospital.doctor</field>
            <field name="arch" type="xml">
                <tree string="doctor patient">
                    <field name="name"/>
                    <field name="speciality"/>
                    <field name="phone"/>
                    <field name="email"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>


        <!--Modelo, de Vista Kanban-->
        <record id="hospital_doctor_view_kanban" model="ir.ui.view">
            <field name="name">hospital.doctor.kanban</field>
            <field name="model">hospital.doctor</field>
            <field name="arch" type="xml">
                <kanban string="medical patient">
                    <field name="name"/>
                    <field name="speciality"/>
                    <field name="phone"/>
                    <field name="email"/>
                    <field name="active"/>
                    <!-- Template de cada card -->
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_card">
                                <div class="o_kanban_details">
                                    <strong>Nome:
                                        <field name="name"/>
                                    </strong>
                                    <br/>
                                    <strong>Especialidade Médica:
                                        <field name="speciality"/>
                                    </strong>
                                    <br/>
                                    <div>Telefone:
                                        <field name="phone"/>
                                    </div>
                                    <br/>
                                    <div>Email:
                                        <field name="email"/>
                                    </div>
                                    <br/>
                                    <div>Ativo:nero
                                        <field name="active"/>
                                    </div>
                                    <br/>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>


        <!--Modelo,Registo de uma Acção(Liga as vista)-->
        <record id="action_hospital_doctor" model="ir.actions.act_window">
            <field name="name"> Doctor</field>
            <field name="res_model">hospital.doctor</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="context">{}</field>
            <field name="domain">[]</field>
        </record>
    </data>
</odoo>