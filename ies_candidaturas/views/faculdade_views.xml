<odoo>
    <record id="view_faculdade_tree" model="ir.ui.view">
        <field name="name">ies.faculdade.tree</field>
        <field name="model">ies.faculdade</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="ies_id"/>
            </tree>
        </field>
    </record>

    <record id="view_faculdade_form" model="ir.ui.view">
        <field name="name">ies.faculdade.form</field>
        <field name="model">ies.faculdade</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="ies_id"/>
                        <field name="curso_ids"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_faculdade" model="ir.actions.act_window">
        <field name="name">Faculdades</field>
        <field name="res_model">ies.faculdade</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_faculdade" name="Faculdades"
              parent="menu_ies_root" action="action_faculdade"/>
</odoo>
