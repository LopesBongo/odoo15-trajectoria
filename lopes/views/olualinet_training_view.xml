<?xml version = "1.0" encoding = "utf-8"?>
<odoo>
    <data>
        <!--Modelo, Vista de Formulario -->
        <record id = "olualinet_training_view_form" model = "ir.ui.view" >
            <field name = "name" >olualinet.training.form</field>
            <field name = "model" >olualinet.training</field>
            <field name = "arch" type = "xml" >
            <form string = "Treinamento Olualinet" >
                <sheet>
                    <group>
                        <group>
                       <field name = "name"/>
                       <field name = "category"/>
                       <field name="passport_number"/>
                      <field name="balance_number"/>
                       </group>
                        <group>
                            <field name="ative"/>
                            <field name="gender"/>
                            <field name="today_date"/>
                        </group>

                    </group>

                </sheet>
            </form>
            </field>
        </record>

        <!--Modelo, de Vista tree-->
        <record id="olualinet_training_view_tree" model="ir.ui.view">
            <field name="name">olualinet.training.tree</field>
            <field name="model">olualinet.training</field>
            <field name="arch" type="xml">
                <tree string="training olualinet">
                    <field name="name"/>
                     <field name="category"/>
                     <field name="passport_number"/>
                    <field name="balance_number"/>
                    <field name="ative"/>
                    <field name="gender"/>
                    <field name="today_date"/>

                </tree>
            </field>
        </record>

           <!--Modelo, de Vista search-->
        <record id="olualinet_training_view_search" model="ir.ui.view">
            <field name="name">olualinet.training.search</field>
            <field name="model">olualinet.training</field>
            <field name="arch" type="xml">
                <search string="Pesquisa">
                    <field name="category" string="Categoria"/>
                    <field name="gender" string="Genero"/>

                    <!--Modelo, de Vista search-->
                    <filter string="Ativo"  name="filter_active" domain="[('ative','=',True)]"/>
                    <filter string="Masculino"  name="filter_gender" domain="[('gender','=','male')]"/>

                     <!-- Agrupamento-->
                    <group expand="1" string="Agrupar por">
                        <filter string="Categoria" name="grupo" context="{'group_by':'category'}"/>
                        <filter string="Genero"  name="group_male" context="{'group_by':'gender'}"/>


                    </group>

                </search>
            </field>
        </record>

