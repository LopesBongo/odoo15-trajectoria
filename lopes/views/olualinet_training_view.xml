        <!--Modelo,Registo de uma Acção-->
         <record id="action_olualinet_training" model="ir.actions.act_window">
             <field name="name">Olualinet Treinamento</field>
             <field name="res_model">olualinet.training</field>
             <field name="view_mode">tree,form</field>
             <field name="context">{}</field>
             <field name="domain">[]</field>
         </record>


         <!-- Menu -->
        <menuitem id="main_olualinet_menu" name="Olualinet" sequence="0" web_icon="lopes,static/description/icon.png"/>
