<?xml version = "1.0" encoding = "utf-8"?>
<odoo>
    <data>
        <!--Modelo, Vista de Formulario -->
        <record id = "olualinet_Solution_view_form" model = "ir.ui.view" >
            <field name = "name" >implement.solution.form</field>
            <field name = "model" >implement.solution</field>
            <field name = "arch" type = "xml" >
            <form string = "Soluçao" >
                <sheet>
                    <group>
                        <group>
                            <field name = "name"/>
                            <field name = "type"/>
                       </group>
                        <group>
                            <field name="category"/>
                        </group>
                    </group>
                </sheet>
            </form>
            </field>
        </record>
        <!--Modelo, de Vista tree-->
        <record id="implement_solution_view_tree" model="ir.ui.view">
            <field name="name">implement.solution.tree</field>
            <field name="model">implement.solution</field>
            <field name="arch" type="xml">
                <tree string="Desafio Odoo 1.0">
                    <field name="name"/>
                     <field name="type"/>
                     <field name="category"/>
                </tree>
            </field>
        </record>

           <!--Modelo, de Vista search-->
        <record id="view_solution_search" model="ir.ui.view">
            <field name="name">implement.solution.search</field>
            <field name="model">implement.solution</field>
            <field name="arch" type="xml">
                <search string="Implementacao Solução">
                    <field name="category" string="Categoria"/>
                    <field name="type" string="tipo"/>

                    <!--Filtros Personalizados-->
                    <filter string="Saude" name="filter_health" domain="[('category','=', 'health')]"/>
                    <filter string="Educaçao" name="filter_education" domain="[('category','=','education')]"/>

                    <!-- Agrupamento-->
                    <group expand="1" string="Agrupar por">
                        <filter string="Categoria" name="grupo_by_category" context="{'group_by':'category'}"/>
                        <filter string="Tipo" name="group_by_type" context="{'group_by':'type'}"/>


                    </group>

                </search>
            </field>
        </record>

        <!--Modelo, de Vista Kanban-->
    <record id="implementation_solution_view_kanban" model="ir.ui.view">
        <field name="name">implement.solution.kanban</field>
        <field name="model">implement.solution</field>
        <field name="arch" type="xml">
            <kanban string="Implementacao de Soluçoes">
                    <field name="name"/>
                    <field name="type"/>
                    <field name="category"/>
                 <!-- Template de cada card -->
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_kanban_card">
                            <div class="o_kanban_details">
                                <strong>Name:<field name="name"/></strong>
                                <br/>
                                <strong>Type:<field name="type"/></strong>
                                <br/>
                                <div>category:<field name="category"/></div>
                                <br/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

        <!--Modelo,Registo de uma Acção-->
         <record id="action_solution_training" model="ir.actions.act_window">
             <field name="name">soluções</field>
             <field name="res_model">implement.solution</field>
             <field name="view_mode">tree,kanban,form</field>
             <field name="context">{}</field>
             <field name="domain">[]</field>
         </record>
    </data>
</odoo>