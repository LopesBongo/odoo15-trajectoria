<?xml version = "1.0" encoding = "utf-8"?>
<odoo>
    <data>
        <!--Modelo, Vista de Formulario -->
        <record id="olualinet_Solution_view_form" model="ir.ui.view">
            <field name="name">implement.client.form</field>
            <field name="model">implement.client</field>
            <field name="arch" type="xml">
                <form string="Cliente">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="tel"/>
                                <field name="email"/>
                            </group>
                            <group>
                                <field name="nif"/>
                                <field name="code"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!--Modelo, de Vista tree-->
        <record id="implement_view_tree" model="ir.ui.view">
            <field name="name">implement.client.tree</field>
            <field name="model">implement.client</field>
            <field name="arch" type="xml">
                <tree string="Desafio Odoo 1.0">
                    <field name="name"/>
                    <field name="tel"/>
                    <field name="email"/>
                    <field name="nif"/>
                    <field name="code"/>
                </tree>
            </field>
        </record>

        <!--Modelo, de Vista search-->
        <record id="view_solution_search" model="ir.ui.view">
            <field name="name">implement.client.search</field>
            <field name="model">implement.client</field>
            <field name="arch" type="xml">
                <search string="Cliente">
                    <!--Campo de pesquisa padrão-->
                    <field name="name"/>
                    <field name="tel"/>
                    <field name="email"/>
                    <field name="nif"/>
                    <field name="code"/>

                    <!--Filtros personalizado -->
                    <filter name="filter_with_email" string="Com Email" domain="[('email','!=',False)]"/>
                    <filter name="filter_without_email" string="Sem Email" domain="[('email','=',False)]"/>
                    <filter name="filter_code_above_100" string="Código > 100" domain="[('code','>',100)]"/>

                    <!-- Agrupamento-->
                    <group expand="1" string="Agrupar por">
                        <filter string="Código" name="group_code" context="{'group_by':'code'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!--Modelo, de Vista Kanban-->
        <record id="olualinet_training_view_kanban" model="ir.ui.view">
            <field name="name">implement.client.kanban</field>
            <field name="model">implement.client</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_small_column" create="true">
                    <field name="name"/>
                    <field name="tel"/>
                    <field name="email"/>
                    <field name="nif"/>
                    <field name="code"/>

                    <!-- Template de cada card -->
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_card">
                                <div class="o_kanban_details">
                                    <strong>Nome:
                                        <field name="name"/>
                                    </strong>
                                    <br/>
                                    <strong>Telefone:
                                        <field name="tel"/>
                                    </strong>
                                    <br/>
                                    <strong>Email:
                                        <field name="email"/>
                                    </strong>
                                    <br/>
                                    <strong>Nif:
                                        <field name="nif"/>
                                    </strong>
                                    <br/>
                                    <strong>Code:
                                        <field name="code"/>
                                    </strong>
                                    <br/>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!--Modelo,Registo de uma Acção-->
        <record id="action_client_training" model="ir.actions.act_window">
            <field name="name">Clientes</field>
            <field name="res_model">implement.client</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="context">{}</field>
            <field name="domain">[]</field>
        </record>
    </data>
</odoo>