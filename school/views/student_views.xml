<odoo>

       <!-- FORMULÁRIO (FORM VIEW) tela de cadastro/edição. -->
    <record id="view_school_student_form" model="ir.ui.view">
        <field name="name">school.student.form</field>
        <field name="model">school.student</field>
        <field name="arch" type="xml">
            <form string="Aluno">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="birth_date"/>
                        <field name="gender"/>
                        <field name="class_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- LISTA (TREE VIEW)  ista todos os alunos. -->
    <record id="view_school_student_tree" model="ir.ui.view">
        <field name="name">school.student.tree</field>
        <field name="model">school.student</field>
        <field name="arch" type="xml">
            <tree string="Alunos">
                <field name="name"/>
                <field name="birth_date"/>
                <field name="gender"/>
                <field name="class_id"/>
            </tree>
        </field>
    </record>

 <!--Modelo, de Vista Kanban-->
        <record id="view_school_student_kanban" model="ir.ui.view">
            <field name="name">school.student.kanban</field>
            <field name="model">school.student</field>
            <field name="arch" type="xml">
                <kanban string="school student">
                    <field name="name"/>
                    <field name="birth_date"/>
                    <field name="gender"/>
                    <field name="class_id"/>
                    <!-- Template de cada card -->
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_card">
                                <div class="o_kanban_details">
                                    <strong>Nome:
                                        <field name="name"/>
                                    </strong>
                                    <br/>
                                    <strong>Data de Nascimento:
                                        <field name="birth_date"/>
                                    </strong>
                                    <br/>
                                    <div>Genero:
                                        <field name="gender"/>
                                    </div>
                                    <br/>
                                    <div>Turma:
                                        <field name="class_id"/>
                                    </div>
                                    <br/>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

    <!-- AÇÃO para abrir alunos -->
    <record id="action_school_student" model="ir.actions.act_window">
        <field name="name">Alunos</field>
        <field name="res_model">school.student</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="context">{}</field>
        <field name="domain">[]</field>
    </record>


</odoo>
