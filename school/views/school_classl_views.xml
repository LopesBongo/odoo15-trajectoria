<odoo>
    <data>
        <!-- Form view -->
        <record id="view_school_class_form" model="ir.ui.view">
            <field name="name">school.class.form</field>
            <field name="model">school.class</field>
            <field name="arch" type="xml">
                <form string="Turma">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="teacher_id"/>
                        </group>
                        <!-- cria abas dentro do formulÃ¡rio -->
                        <notebook>
                            <page string="Alunos">
                                <field name="student_ids">
                                    <tree>
                                        <field name="name"/>
                                        <field name="gender"/>
                                        <field name="birth_date"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Tree view -->
        <record id="view_school_class_tree" model="ir.ui.view">
            <field name="name">school.class.tree</field>
            <field name="model">school.class</field>
            <field name="arch" type="xml">
                <tree string="Turmas">
                    <field name="name"/>
                    <field name="teacher_id"/>
                </tree>
            </field>
        </record>

        <!-- Action -->
        <record id="action_school_class" model="ir.actions.act_window">
            <field name="name">Turmas</field>
            <field name="res_model">school.class</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>
